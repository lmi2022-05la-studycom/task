<h2><%= @user.name %>さんのタスク</h2>

<%# フォームの配置(form_with) %>
<%= form_with model: @task do |f| %>
<table>
    <tr>
        <th><%= f.label :タスク登録 %></th>
        <td><%= f.text_field :content %></td>
        <td colspan="1"><%= f.submit '保存する' %></td>
    </tr>
</table>
<% end %>

<%# テーブルの配置 %>
<table>
    <tr>
        <th>id</th>
        <th>タスク内容</th>
        <th>登録日時</th>
        <th>編集</th>
        <th>削除</th>
    </tr>
    <% @tasks.each do |t| %>
    <tr>
        <td><%= t.id %></td>
        <td><%= t.content %></td>
        <td><%= t.created_at %></td>
        <td><%= link_to '編集', edit_task_path(t) %></td>
        <td><%= link_to '削除', task_path(t), method: :delete, 
        data: { confirm: '本当に削除しますか？'} %></td>
    </tr>
    <% end %>
</table>

  <%= paginate @tasks %>